{% extends 'base.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}
    <h1>Produits index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>libelle</th>
                <th>description</th>
                <th>ref</th>
                <th>prix</th>
                <th>photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>

                <td>{{ produit.proLibelle }}</td>
                <td>{{ produit.proDescription }}</td>
                <td>{{ produit.proRef }}</td>
                <td>{{ produit.proPrix }}</td>
                <td><img src="/uploads/{{ produit.proPhoto }}" alt="photo" class="img-fluid"></td>
                <td>
                    <a href="{{ path('produits_show', {'id': produit.id}) }}"><button class="btn btn-primary">show</button></a>
                    {% if app.user %}

                    {% if app.user.userRole == 1 %}
                    <a href="{{ path('produits_edit', {'id': produit.id}) }}"><button class="btn btn-secondary">edit</button></a>
                    <a href="{{ include('produits/_delete_form.html.twig') }}"></a>
                    {% endif %}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produits_new') }}"><button class="btn btn-primary"> Create new</button></a>
    <br><br>
{% endblock %}